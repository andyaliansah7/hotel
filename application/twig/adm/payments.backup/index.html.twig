{% extends 'adm/layout.html.twig' %}

{% block content %}

<div class="content-wrapper" id="vue-master">

	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h4>{{ content_title }}</h4>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">Home</li>
						<li class="breadcrumb-item"><a href="#">Pembayaran</a></li>
					</ol>
				</div>
			</div>
		</div>
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">

				<div class="col-md-12">

					<div class="card card-default">
						<div class="card-header">
							<h3 class="card-title">Data</h3>
						</div>
						<div class="card-body">
							
							<table id="master-table" class="table table-striped table-bordered" width="100%">
								<thead>
									<tr>
										<th>
											<input class="check-all-master" type="checkbox">
										</th>
										<th>
											Nomor Kwitansi
										</th>
										<th>
											Tanggal
										</th>
										<th>
											Check-In
										</th>
										<th>
											Nama Tamu
										</th>
										<th>
											Tipe Kamar
										</th>
										<th>
											Nomor Kamar
										</th>
										<th>
											Tanggal Masuk
										</th>
										<th>
											Tanggal Keluar
										</th>
										<th>
											Harga Sewa Kamar
										</th>
										<th>
											Diskon
										</th>
										<th>
											Deposit
										</th>
										<th>
											Makanan & Minuman
										</th>
										<th>
											Layanan
										</th>
										{# <th>
											Pajak (10%)
										</th> #}
										<th>
											Total Bayar
										</th>
										<th>
											Jumlah 1
										</th>
										<th>
											Metode Pembayaran 1
										</th>
										<th>
											Jumlah 2
										</th>
										<th>
											Metode Pembayaran 2
										</th>
										<th>
											Jumlah 3
										</th>
										<th>
											Metode Pembayaran 3
										</th>
										<th>
											
										</th>
									</tr>
								</thead>
							</table>
				
						</div>

						{% if check_roles('1') %}
						<div class="card-footer">
							<input class="form-control" name="b_id" id="b_id" value="{{ b_id }}" type="hidden">

							<a class="btn btn-success master-edit" id="master-edit"
							href="{{ site_url('adm/payments/edit/new') }}">
								Tambah
							</a>

							<a class="btn btn-success master-edit" id="master-edit-process"
							href="{{ url }}" style="display:none">
								Tambah
							</a>

							<button class="btn btn-danger master-delete">
								Hapus
							</button>

						</div>
						{% endif %}

					</div>

				</div>
				
			</div>
			<!-- /.row -->
		</div><!-- /.container-fluid -->
	</section>
	<!-- /.content -->

</div>

<div class="modal fade master-modal" id="modal-default">
	<div class="modal-dialog modal-md">
		<div class="modal-content master-modal-content">
			Loading...
		</div>
	</div>
</div>

{% endblock  %}

{% block add_javascript %}
{{ parent() }}


<script type="text/javascript" src="{{ assets_url('assets/js/app/master/payments.js?') }}"></script>

<script type="text/javascript">
	window.MASTER.handleVueMaster();
</script>
{% endblock  %}