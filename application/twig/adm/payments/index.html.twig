{% extends 'adm/layout.html.twig' %}

{% block content %}

<div class="content-wrapper" id="vue-master">

	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h4>{{ content_title }}</h4>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">Beranda</li>
						<li class="breadcrumb-item"><a href="#">Pembayaran</a></li>
					</ol>
				</div>
			</div>
		</div>
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">

				<div class="col-md-12">

					<div class="card card-default">
						<div class="card-header">
							<a class="btn btn-success master-edit"
								href="{{ site_url('adm/payments/edit/new') }}">
								Tambah
							</a>

							<button class="btn btn-danger master-delete">
								Hapus
							</button>
						</div>
						<div class="card-body">

							<table id="master-table" class="table table-striped table-bordered" width="100%">
								<thead>
									<tr>
										<th class="fit-width">
											<input class="check-all-master" type="checkbox">
										</th>
										<th>
											Nomor Pembayaran
										</th>
										<th>
											Tanggal
										</th>
										<th>
											Tamu
										</th>
										<th>
											Metode Pembayaran
										</th>
										<th>
											Total
										</th>
										{# <th class="fit-width">
											
										</th> #}
									</tr>
								</thead>
							</table>

						</div>
					</div>

				</div>

			</div>
			<!-- /.row -->
		</div><!-- /.container-fluid -->
	</section>
	<!-- /.content -->

</div>

{% endblock  %}

{% block add_javascript %}
{{ parent() }}


<script type="text/javascript" src="{{ assets_url('assets/js/app/payments/index.js?') }}"></script>

<script type="text/javascript">
	window.MASTER.handleVueMaster();
</script>
{% endblock  %}